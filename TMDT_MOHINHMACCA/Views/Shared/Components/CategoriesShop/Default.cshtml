@model IEnumerable<Category>

<div class="mb-3">
    <h4>Danh mục</h4>
    <ul class="list-unstyled fruite-categorie">
        <li>
            <div class="d-flex justify-content-between fruite-name">
                <a href="/shop"><i class="fas fa-cart-arrow-down me-2"></i>Tất cả</a>
                <span>(@Model.Sum(category => category.Posts.Count(post => post.Status == "1")))</span>
            </div>
        </li>
        @foreach (var item in Model)
        {
            <li>
                <div class="d-flex justify-content-between fruite-name">
                    <a href="/shop?categoryid=@item.CateId"><i class="fas @item.CateImage me-2"></i>@item.CateName</a>
                    <span>(@item.Posts.Where(p=>p.Status=="1").Count())</span>
                </div>
            </li>
        }
    </ul>
</div>
