@using TMDT_MOHINHMACCA.ViewModels
@model LoginVM
@{
    Layout = "_AccessLayout";
    ViewData["Title"] = "Đăng nhập";
}
@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert('@Html.Raw(TempData["SuccessMessage"])');
    </script>
}
<div id="content">
    <div class="wrapper-form">
        <form asp-action="Login" asp-controller="Access" asp-route-ReturnUrl="@ViewBag.ReturnUrl" method="post">
            <h1 style="color:white">Đăng nhập</h1>
            <div class="input-box">
                <input type="text" asp-for="Username" placeholder="Tên đăng nhập" required>
                <i class="fa fa-user" aria-hidden="true"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            
            <div class="input-box">
                <input type="password" asp-for="Password" placeholder="Mật khẩu" required>
                <i class="fa fa-lock" aria-hidden="true"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check form-switch">
                <div class="row">
                    <div class="col-6">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" id="rememberMe" checked">
                        <label class="form-check-label" style="color:darkgray" for="rememberMe">Ghi nhớ mật khẩu</label>
                    </div>
                    <div class="col-6">
                            <a class="mb-4 text-sm mx-auto">
                                <a href="/forgot" class="text-info text-gradient ">Quên mật khẩu?</a>
                            </a>
                    </div>

                </div>

            </div>
            <button type="submit" class="btn">Đăng nhập</button>
            <br />
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fa fa-exclamation-circle" style="color:white"></i><strong style="color:white"> @ViewData["ErrorMessage"]</strong>
                </div>
            }
            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                <p class="mb-4 text-sm mx-auto">
                    Chưa có tài khoản?
                    <a href="/signup" class="text-info text-gradient font-weight-bold">Đăng ký</a>
                </p>
            </div>
            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                <p>Đăng nhập bằng phương thức khác</p>
                <a asp-controller="Access" asp-action="LoginWithGoogle">
                    <img src="~/img/logingoogle.png" style="width: 40px; height: 40px;" />
                </a>
            </div>
        </form>
        
    </div>
</div>