@using TMDT_MOHINHMACCA.ViewModels
@{
    Layout = "_AccessLayout";
    ViewData["Title"] = "Đăng ký";
}
@model SignupVM
<div id="content">
    <div class="wrapper-form">
        <form asp-action="Signup" asp-controller="Access" method="post">
            <h1 style="color:white">Đăng ký</h1>
            <div class="input-box">
                <input type="text" asp-for="Username" id="username" placeholder="Tên đăng nhập" required>
                <span asp-validation-for="Username" class="text-danger"></span>
                <i class="fa fa-user" aria-hidden="true"></i>
            </div>
            <div class="input-box">
                <input type="text" asp-for="Fullname" id="fullname" placeholder="Họ và tên" required>
                <i class="fa fa-user" aria-hidden="true"></i>
            </div>
            <div class="input-box">
                <input type="email" asp-for="Email" id="email" placeholder="Email" required>
                <span asp-validation-for="Email" class="text-danger"></span>
                <i class="fa fa-envelope" aria-hidden="true"></i>
            </div>
            <div class="input-box">
                <input type="password" asp-for="Password" id="password" placeholder="Mật khẩu" required>
                <i class="fa fa-lock" aria-hidden="true"></i>
            </div>
            <div class="input-box">
                <input type="password" id="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                <i class="fa fa-lock" aria-hidden="true"></i>
            </div>
            <button type="submit" class="btn">Đăng ký</button>
            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                <p class="mb-4 text-sm mx-auto">
                    Đã có tài khoản?
                    <a href="/login" class="text-info text-gradient font-weight-bold">Đăng nhập</a>
                </p>
            </div>
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fa fa-exclamation-circle" style="color:white"></i><strong style="color:white"> @ViewData["ErrorMessage"]</strong>
                </div>
            }
        </form>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('username').addEventListener('input', function () {
            var username = this.value;
            if (username.length > 20) {
                this.setCustomValidity('Username không được vượt quá 20 ký tự');
            } else {
                this.setCustomValidity('');
            }
        });
        document.getElementById('fullname').addEventListener('input', function () {
            var fullname = this.value;
            if (fullname.length > 50) {
                this.setCustomValidity('Họ và tên không được vượt quá 50 ký tự');
            } else {
                this.setCustomValidity('');
            }
        });
        document.getElementById('password').addEventListener('input', function () {
            var password = this.value;
            if (password.length > 20) {
                this.setCustomValidity('Mật khẩu không được vượt quá 20 ký tự');
            } else {
                this.setCustomValidity('');
            }
        });
    });
        document.addEventListener('DOMContentLoaded', function () {
            var passwordInput = document.getElementById('password');
            var confirmPasswordInput = document.getElementById('confirmPassword');
            passwordInput.addEventListener('input', validatePassword);
            confirmPasswordInput.addEventListener('input', validatePassword);
            function validatePassword() {
                var password = passwordInput.value;
                var confirmPassword = confirmPasswordInput.value;
                if (password !== confirmPassword) {
                    passwordInput.setCustomValidity('Mật khẩu không khớp');
                } else {
                    passwordInput.setCustomValidity('');
                }
            }
        });
</script>







